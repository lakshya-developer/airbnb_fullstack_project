<header class="bg-black py-6 shadow-lg border-b border-gray-800">
  <div class="flex flex-col justify-between items-center md:flex-row container mx-auto px-6 max-w-7xl">
    <div class="mb-4 md:mb-0">
      <h1 class="text-white text-4xl font-bold tracking-wide hover:text-gray-300 transition-colors duration-300 cursor-pointer">
        <a href="/" class="flex items-center">
          <span class="bg-gradient-to-r from-pink-500 to-red-500 bg-clip-text text-transparent">Airbnb</span>
        </a>
      </h1>
    </div>
    <div class="flex justify-center items-center gap-2">
      <% if (isLoggedIn) { %>
        <% if (userType === "guest") { %>
          <a
            href="/home-list"
            class="px-8 py-3 rounded-full hover:bg-gray-800 text-white font-medium transition-all duration-300 hover:scale-105 <%= currentPath === '/home-list' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
          >
            Home List
          </a>
        <a
          href="/favourite"
          class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-gray-800 hover:scale-105 <%= currentPath === '/favourite' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
        >
          Favourite
        </a>
        <a
          href="/bookings"
          class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-gray-800 hover:scale-105 <%= currentPath === '/bookings' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
        >
          Bookings
        </a>
        <%} else { %>
        <a
          href="/host"
          class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-gray-800 hover:scale-105 <%= currentPath === '/host' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
        >
          Host
        </a>
        <a
          href="/host/add-home"
          class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-gray-800 hover:scale-105 <%= currentPath === '/host/add-home' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
        >
          + Add Home
        </a>
        <% } %>
        <a
            href="/user"
            class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-gray-800 hover:scale-105 <%= currentPath === '/user' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
          >
            Profile
          </a>
        <form action="/logout" method="POST" class="inline-block">
          <button class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-red-600 hover:scale-105 bg-red-500">
            Logout
          </button>
        </form>
      <%} else { %>
        <div class="flex items-center gap-3 ml-4">
          <a
            href="/login"
            class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-gray-800 hover:scale-105 <%= currentPath === '/login' ? 'bg-gray-800 ring-2 ring-gray-600' : '' %>"
          >
            Login
          </a>
          <a
            href="/sign-up"
            class="px-8 py-3 rounded-full transition-all duration-300 text-white font-medium hover:bg-blue-600 hover:scale-105 bg-blue-500 <%= currentPath === '/sign-up' ? 'ring-2 ring-blue-400' : '' %>"
          >
            Sign Up
          </a>
        </div>
      <% } %>
    </div>
  </div>
</header>